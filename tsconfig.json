{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "#*": ["./src/*"]
        },
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "checkJs": true,
        "noEmit": true,
        "skipLibCheck": true
    },

    "include": ["src/**/*"],

    "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
